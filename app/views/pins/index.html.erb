<p id="notice"><%= notice %></p>

<h1>Lista postów</h1>

<table>
  <thead>
    <tr>
      <th> Obraz </th>
      <th>Opis</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pins.each do |pin| %>
      <tr>
        <td><%= image_tag pin.image.url (:medium) %></td>
        <td><%= pin.description %></td>
        
        <td><%= link_to 'Pokaż', pin, class: 'btn btn-link ' %></td>
        <% if pin.user == current_user %>
        <td><%= link_to 'Edytuj', edit_pin_path(pin), class: 'btn btn-link ' %></td>
        <td><%= link_to 'Zniszcz',  pin, method: :delete, data: { confirm: 'Czy jesteś pewien?' }, class: 'btn btn-link ' %></td>
      <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nowy Post', new_pin_path, class: 'btn btn-primary ' %>
